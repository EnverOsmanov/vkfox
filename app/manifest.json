{
        "name": "VKfox - клиент для \"В контакте\"",
        "version": "5",
        "manifest_version": 2,
        "description": "__MSG_ext_description__",
        "background": {
            "page": "background.html"
        },
        "icons": {
            "16": "images/logo16.png",
            "48": "images/logo48.png",
            "128": "images/logo128.png"
        },
        "permissions": [
            "tabs",
            "http://*.vk.me/*",
            "http://*.vk.com/*",
            "https://*.vk.me/*",
            "https://*.vk.com/*",
            "cookies",
            "notifications"
        ],
        "browser_action": {
            "default_icon": {
                "19": "images/logo19_offline.png",
                "38": "images/logo38_offline.png"
            },
            "default_title": "VKfox",
            "default_popup": "popup.html"
        },
        "content_scripts": [{
            "matches" : ["http://oauth.vk.com/*", "https://oauth.vk.com/*"],
            "js" : ["modules/background/auth/oauth.vk.com.js"],
            "run_at" : "document_start",
            "all_frames" : true
        }],
        "minimum_chrome_version" : "28"
}
