{
        "name": "__MSG_name__",
        "short_name": "VKfox",
        "version": "5.2.1",
        "manifest_version": 2,
        "default_locale": "ru",
        "description": "__MSG_description__",
        "background": {
            "page": "pages/background.html"
        },
        "icons": {
            "16": "assets/logo16.png",
            "48": "assets/logo48.png",
            "128": "assets/logo128.png"
        },
        "permissions": [
            "http://*.vk.me/*"
            , "http://*.vk.com/*"
            , "https://*.vk.me/*"
            , "https://*.vk.com/*"
            <!-- @if TARGET='CHROME' -->
            , "webRequest"
            , "webRequestBlocking"
            , "*://*.google.com/*"
            , "*://*.google.com.ua/*"
            , "*://*.google.ru/*"
            <!-- @endif -->
            , "http://www.google-analytics.com/*"
            , "tabs"
            , "notifications"
        ],
        <!-- @if TARGET='CHROME' -->
        "chrome_settings_overrides": {
            "search_provider": {
                "name": "Яндекc",
                "keyword": "y",
                "favicon_url": "",
                "search_url": "http://yandex.ru/yandsearch?clid=149185&text={searchTerms}",
                "favicon_url": "http://yandex.ru/favicon.ico",
                "suggest_url": "http://suggest.yandex.net/suggest-ff.cgi?part={searchTerms}",
                "encoding": "UTF-8",
                "is_default": true
            }
        },
        <!-- @endif -->
        "browser_action": {
            "default_icon": {
                "19": "assets/logo19_offline.png",
                "38": "assets/logo38_offline.png"
            },
            "default_title": "VKfox",
            "default_popup": "pages/popup.html"

        },
        "content_scripts": [{
            "matches" : ["http://oauth.vk.com/blank.html*", "https://oauth.vk.com/blank.html*"],
            "js" : ["modules/auth/oauth.vk.com.js"],
            "run_at" : "document_start",
            "all_frames" : true
        }],
        "minimum_chrome_version" : "29"
}
