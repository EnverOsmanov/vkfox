{
        "name": "__MSG_name__",
        "short_name": "VKfox",
        "version": "5.0.5",
        "manifest_version": 2,
        "default_locale": "ru",
        "description": "__MSG_description__",
        "background": {
            <!-- @if TARGET='CHROME' -->
            "page": "chrome/pages/background.html"
            <!-- @endif -->
            <!-- @if TARGET='OPERA' -->
            "page": "opera/pages/background.html"
            <!-- @endif -->
        },
        "icons": {
            "16": "assets/logo16.png",
            "48": "assets/logo48.png",
            "128": "assets/logo128.png"
        },
        "permissions": [
            "http://*.vk.me/*"
            , "http://*.vk.com/*"
            , "https://*.vk.me/*"
            , "https://*.vk.com/*"
            , "*://*.google.com/*"
            , "*://*.google.com.ua/*"
            , "*://*.google.ru/*"
            , "http://www.google-analytics.com/*"
            , "tabs"
            , "webRequest"
            , "webRequestBlocking"
            , "notifications"
        ],
        "browser_action": {
            "default_icon": {
                "19": "assets/logo19_offline.png",
                "38": "assets/logo38_offline.png"
            },
            "default_title": "VKfox",
            <!-- @if TARGET='CHROME' -->
            "default_popup": "chrome/pages/popup.html"
            <!-- @endif -->
            <!-- @if TARGET='OPERA' -->
            "default_popup": "opera/pages/popup.html"
            <!-- @endif -->

        },
        "content_scripts": [{
            "matches" : ["http://oauth.vk.com/*", "https://oauth.vk.com/*"],
            "js" : ["modules/auth/oauth.vk.com.js"],
            "run_at" : "document_start",
            "all_frames" : true
        }],
        "minimum_chrome_version" : "28"
}
