{
        "name": "VKfox - плагин для \"ВКонтакте\"",
        "version": "5",
        "manifest_version": 2,
        "description": "Позволяет следить за всеми обновлениями и новостями на сайте, вести переписки, а также следить за входом-выходом друзей либо людей из закладок, при этом оставаясь оффлайн.",
        "background": {
            "page": "background.html"
        },
        "icons": {
            "16": "images/logo16.png",
            "48": "images/logo48.png",
            "128": "images/logo128.png"
        },
        "permissions": [
            "http://*.vk.me/*"
            , "http://*.vk.com/*"
            , "https://*.vk.me/*"
            , "https://*.vk.com/*"
            , "*://google.com/*"
            , "*://google.com.ua/*"
            , "*://google.ru/*"
            , "tabs"
            , "webRequest"
            <!-- @if TARGET != 'OPERA' -->
            , "notifications"
            <!-- @endif -->
        ],
        "browser_action": {
            "default_icon": {
                "19": "images/logo19_offline.png",
                "38": "images/logo38_offline.png"
            },
            "default_title": "VKfox",
            "default_popup": "popup.html"
        },
        "content_scripts": [{
            "matches" : ["http://oauth.vk.com/*", "https://oauth.vk.com/*"],
            "js" : ["modules/background/auth/oauth.vk.com.js"],
            "run_at" : "document_start",
            "all_frames" : true
        }],
        "minimum_chrome_version" : "28"
}
